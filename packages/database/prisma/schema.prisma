generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

enum VerificationType {
  WORLD_ID
}

model UserVerification {
  did    String @id
  type   VerificationType
  data   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
