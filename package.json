{
  "private": true,
  "name": "betoken",
  "version": "1.0.0",
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "check-types": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm"
  },
  "packageManager": "pnpm@7.33.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
